[bits  32]

section .text

;------------------------------------------------------------------------------
; print string function
; ds:esi = string to print
global puts_386
puts_386:
	push esi
	push eax
.l01:
	mov al,[ds:esi]
	cmp al,0
	je .l02
	call putc_386
	inc esi
	jmp .l01
.l02:
	pop eax
	pop esi

	ret
